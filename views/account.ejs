        <!-- Formulaire de Inscription -->
<form role="form" action="/page/index" method="POST" enctype="multipart/form-data">
  <div class="container" style="margin-top: 100px;">
    <h1 style="text-align: center; text-transform: uppercase;margin-bottom: 30px;">Inscription</h1>
    <div class="row">
        <form name="createAccount" id="contactForm" novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Nom</label>
              <input type="text" class="form-control" placeholder="Name" name="firstname">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Prenom</label>
              <input type="text" class="form-control" placeholder="Name" name="lastname">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Email Address</label>
              <input type="email" class="form-control" placeholder="Email Address" name="email" id="email">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <label>Mot de passe</label>
              <input type="tel" class="form-control" placeholder="Mot de passe" name="password">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <label>Valider Mot de passe</label>
              <input type="tel" class="form-control" placeholder="Valider Mot de passe" name="password2">
              <p class="help-block text-danger"></p>
            </div>
          </div>
        
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="Inscription">s'inscrire</button>
        </form>
      </div>
    </div>
  </div>
</form>



