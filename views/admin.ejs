<%- include('./partials/navbarDashboard.ejs')-%>
<link rel="stylesheet" href="/css/admin.css">

<script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">


<div class="page">
  <div class="container">
    <form class="post" method="POST" action="/dashboard/admin" enctype="multipart/form-data">
      <div class="titre-article">
        <h1>Create Articles</h1>
      </div>
      <hr>
      <div class="content" style=" padding-bottom: 60px;">

        <div class="form-group row">
          <label for="colFormLabel" class="col-sm-2 col-form-label">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="title" id="colFormLabel">
          </div>
        </div>

        <div class="form-group row">
          <label for="colFormLabel" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <textarea rows="5" class="form-control" name="description"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <label for="colFormLabel" class="col-sm-2 col-form-label">Texte blog</label>
          <div class="col-sm-10">
            <textarea rows="5" class="form-control" id="blog" name="content"></textarea>
          </div>
        </div>
        
        <% articles.forEach(function(entry) {%>
        <div class="form-group row">
          <label for="colFormLabel" class="col-sm-2 col-form-label">Category</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="CategoryId" id="colFormLabel">
          </div>
        </div>
        <%});%>

        <!-- <div class="form-group row">
          <label for="colFormLabel" class="col-sm-2 col-form-label">Category</label>
          <div class="col-sm-10">
            <textarea rows="5" class="form-control" id="blog" name="Category"></textarea>
          </div>
        </div> -->

        <!--
        <select id="monselect">
          <option value="" name="Category"> </option> 
        </select>
     -->

        <div class="form-group row">
          <label for="myfile" class="col-sm-2 col-form-label">Choisir une image de profile</label>
          <div class="col-sm-10">
            <input class="parc" type="file" name="image">
          </div>
        </div>

        <div class="form-group row">
          <label for="myfile" class="col-sm-2 col-form-label">Choisir une image d'arriere plan</label>
          <div class="col-sm-10">
            <input class="parc" type="file" name="backImage">
          </div>
        </div>

        <button class="btn btn-outline-primary btn-lg" style="width: 150px;" type="submit">Publier</button>
      </div>
    </form>


    <!-- Visuel des articles -->

    <div class="titre-ajouté">
      <h1>Articles ajoutés</h1>
    </div>
    <hr>
    <% articles.forEach(function(entry) {%>
    <div class="card mb-3" style="max-width: 1000vw; margin-top: 40px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%=entry.image%>" class="card-img" alt="..." name="image" style="width: 200px; height: 266;">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=entry.title%></h5>
            <p class="card-text"><%=entry.description%></p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <form class="art" action="/dashboard/admin/<%=entry.postId%>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-outline-danger" name="postId">Delete</button>
              <button type="button" class="btn btn-outline-warning" name="" data-toggle="modal" data-target="#exampleModal"
                data-whatever="@getbootstrap">Update</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    

  <!-- Modal Pour Mise à jour d'un POST -->
<form action="/dashboard/admin/<%=entry.postId%>?_method=PUT" method="POST" enctype="multipart/form-data" >
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modif</h5>
          </div>


          <div class="modal-body">
            <form>
              <div class="form-group row">
                <label for="colFormLabel" class="col-sm-2 col-form-label"><%=entry.title%></label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="title" id="colFormLabel">
                </div>
              </div>

              <div class="form-group row">
                <label for="colFormLabel" class="col-sm-2 col-form-label"><%=entry.description%></label>
                <div class="col-sm-10">
                  <textarea rows="5" class="form-control" name="description"></textarea>
                </div>
              </div>

              <div class="form-group row">
                <label for="colFormLabel" class="col-sm-2 col-form-label"><%=entry.content%></label>
                <div class="col-sm-10">
                  <textarea rows="5" class="form-control" id="blog" name="content"></textarea>
                </div>
              </div>


              <div class="form-group row">
                <label for="myfile" class="col-sm-2 col-form-label">Choisir une image de profile</label>
                <div class="col-sm-10">
                  <input class="parc" type="file" name="image">
                </div>
              </div>

              <div class="form-group row">
                <label for="myfile" class="col-sm-2 col-form-label">Choisir une image d'arriere plan</label>
                <div class="col-sm-10">
                  <input class="parc" type="file" name="backImage">
                </div>
              </div>

            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Abandonner</button>
            <button type="submit" class="btn btn-primary">Valider les changements</button>
          </div>
        </div>
      </div>
    </div>
    <%});%>

  </div>
</div>



<script>
  ClassicEditor
    .create(document.querySelector('#blog'))
    .catch(error => {
     // console.error(error);
    });
</script>

<%- include('./partials/footer')-%>