<%- include('./partials/navbarDashboard.ejs')-%>
<link rel="stylesheet" href="/css/listeManga.css">


<div class="container">
  <form class="post" method="POST" action="/dashboard/listeManga" enctype="multipart/form-data">
    <div class="titre-article">
      <h1>Create Liste Manga</h1>
    </div>
       <hr>
    <div class="content" style=" padding-bottom: 60px;">

      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="title" id="colFormLabel">
        </div>
      </div>

      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Synopsis</label>
        <div class="col-sm-10">
          <textarea rows="5" class="form-control" name="content"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Auteur</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="author" id="colFormLabel">
        </div>
      </div>

      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="mangaCategory" id="colFormLabel">
        </div>
      </div>

      <div class="form-group row">
        <label for="myfile" class="col-sm-2 col-form-label">Choisir une image de profile</label>
        <div class="col-sm-10">
          <input class="parc" type="file" name="image">
        </div>
      </div>
      <button class="btn btn-outline-primary btn-lg" style="width: 150px;" type="submit">Publier</button>
    </div>
  </form>

<div class="container2">
    <h2>Liste des manga</h2>
    <ul class="responsive-table">
      <li class="table-header">
        <div class="col col-1">Id</div>
        <div class="col col-2">Image</div>
        <div class="col col-3">Titre</div>
        <div class="col col-4">Synopsis</div>
        <div class="col col-5">Auteur</div>
        <div class="col col-6">Category</div>
        <div class="col col-7">Update/Delete</div>
      </li>
      <% ListeManga.forEach(function(entry) {%>
      <li class="table-row">
        <div class="col col-1" data-label="Job Id"><%=entry.mangaId%></div>
        <div class="col col-2">
          <img src="<%=entry.image%>" name="image" alt="" style="width:100px;">
        </div>
        <div class="col col-3" data-label="Amount"><%=entry.title%></div>
        <div class="col col-4" data-label="Payment Status"><%=entry.content%></div>
        <div class="col col-5" data-label="Job Id"><%=entry.name%></div>
        <div class="col col-6" data-label="Payment Status"><%=entry.genre%></div>
        
        <div class="button" >
          <form class="art" style="display: flex; flex-direction: column; margin-top: 10px;" action="/dashboard/listeManga/<%=entry.mangaId%>?_method=DELETE" method="POST">
            <button type="submit" style="margin: 10px;" class="btn btn-outline-danger" name="postId">Delete</button>
            <a style="margin: 10px;" href="/dashboard/listeManga/<%=entry.postId%>">Update</a>  
          </form>
        </div>
      </li>
      <%});%>
    </ul>
  </div>
  