<div class="container">
    <form method="POST" action="/users/login"> 
    <form role="form" action="/users/login" method="POST" enctype="multipart/form-data">

      

      <% if(messageSuccess .length > 0) { %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= messageSuccess %>
        </div>
      <%}%>
      
          <div class="form-group">
            <h1>Connexion</h1>

            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Email Address</label>
                <input type="email" class="form-control" placeholder="Email Address" name="email" id="email">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Mot de passe</label>
                <input type="tel" class="form-control" placeholder="Mot de passe" name="password">
                <p class="help-block text-danger"></p>
              </div>
            </div>
<br>
            <div id="success"></div>
            <button type="submit" class="btn btn-primary" style="text-align: end;" id="Inscription">Connexion</button>
          
          </div>
    </form>
</div>
</div>



