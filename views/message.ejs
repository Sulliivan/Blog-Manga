<%- include('./partials/navbarDashboard.ejs')-%>
<link rel="stylesheet" href="/css/DashMessage.css">


    <div class="container">
          <h1>Suivi Des Messages</h1>
          <hr>

     <% if(messageSuccess.length > 0) { %>
        <div class="alert alert-success">
          <%= messageSuccess%>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      <%}%>

            <% Contact.forEach(function(entry) {%>
            <div class="card-body">
                        <h5 class="card-title"><%=entry.name%> - <%=entry.email%> </h5>
                        <p class="card-phone"><%-entry.phone%></p>
                        <h6 class="card-subtitle mb-2 text-muted">Re√ßu le <%=entry.date%></h6>
                        <p class="card-text"><%-entry.message%></p>
                            <form class="art" action="/dashboard/message/<%=entry.id%>?_method=DELETE" method="POST">
                                <button type="submit" class="btn-delete" name="id">supprimer</button>
                            </form>
                        </div>
            <%});%>
            
    </div>
